<!DOCTYPE html>
<html>
<head>
<%= render :partial => 'shared/head', :locals => { :deal => @deal, :title_prefix => "", :style_sheet_path => "shared/assets/stylesheets/deals" } %>
</head>

<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#"><%= tag_line %></a>
      </div>
    </div>
  </div>

    <div class="container">
      <% if flash[:warn].present? %>
      <div class="row">
        <div class="span16">
          <div class="alert-message warning">
            <p><%= flash[:warn] %></p>
          </div>
        </div>
      </div>
      <% end %>

      <% if flash[:notice].present? %>
      <div class="row">
        <div class="span16">
          <div class="alert-message success">
            <p><%= flash[:notice] %></p>
          </div>
        </div>
      </div>
      <% end %>

<%= yield %>

      <footer>
        <p><%= tag_line %></p>
      </footer>

    </div> <!-- /container -->
</body>
</html>
